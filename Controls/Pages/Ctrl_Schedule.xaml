<UserControl x:Class="YClimb.Controls.Ctrl_Schedule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YClimb.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280" Background="#AEAEB2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!--                    L E F T   T A B    (NAVIGATION)             -->
        
        <Border Style="{StaticResource BorderBase}" Grid.Column="0" Background="#ccc4c4d4">
            <StackPanel Style="{StaticResource StackPanelBase}">

                <Button Style="{StaticResource MenuButton}"
                    Content="Feed"
                    Width="200" Height="48"
                    Click="Button_Feed_Click"    
                    Margin="0,26,0,0"/>

                <Button Style="{StaticResource MenuButton}"
                    Content="Routes"
                    Width="200" Height="48"
                    Click="Button_Routes_Click"
                    Margin="0,58,0,0"/>

                <Button Style="{StaticResource MenuButton}"
                    Content="Events"
                    Width="200" Height="48"
                    Click="Button_Events_Click"        
                    Margin="0,26,0,0"/>

                <Button Style="{StaticResource MenuButton}"
                    Content="Schedule"
                    Width="200" Height="48"
                    IsEnabled="False"       
                    Margin="0,26,0,0"/>

                <Border Style="{StaticResource BorderImageAvatar}" 
                    Width="100" Height="100" Margin="0,130,0,0" HorizontalAlignment="Center">
                    <Border.Background>
                        <ImageBrush ImageSource="/Images/DefaultUser.jpg"/>
                    </Border.Background>
                </Border>

                <Button Style="{StaticResource MenuButton}"
                    Content="Profile"
                    Width="200" Height="48"
                    Click="Button_Profile_Click"        
                    Margin="0,20,0,0"/>

            </StackPanel>

            <Border.Effect>
                <DropShadowEffect Direction="270"  Opacity="0.4"/>
            </Border.Effect>
        </Border>


        <!--                     M A I N   T A B   (CONTENT)                -->
        
        <Border Style="{StaticResource BorderBase}" Grid.Column="1" Background="#c6c4ca"
                Margin="0,8,8,8">
            <StackPanel Style="{StaticResource StackPanelBase}">
                <Button Style="{StaticResource ActionButtonBlack}"
        Content="Sign in"
        Width="280" Height="42"
        Margin="0,0,0,0"/>
            </StackPanel>
            
            <Border.Effect>
                <DropShadowEffect Direction="270"  Opacity="0.4"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
