<UserControl x:Class="YClimb.Controls.Common.Ctrl_MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YClimb.Controls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280" Background="#AEAEB2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- L E F T   T A B   (NAVIGATION) -->
        <Border Style="{StaticResource BorderBase}" Grid.Column="0" Background="#ccc4c4d4">
            <StackPanel Style="{StaticResource StackPanelBase}">

                <Button Style="{StaticResource MenuButton}"
                    Name="Button_Feed"
                    IsEnabled="False"
                    Click="Button_Feed_Click"
                    Content="Feed"
                    Width="200" Height="48"   
                    Margin="0,8,0,0"/>

                <Button Style="{StaticResource MenuButton}"
                    Name="Button_Routes"
                    Content="Routes"
                    Width="200" Height="48"
                    Click="Button_Routes_Click"
                    Margin="0,58,0,0"/>

                <Button Style="{StaticResource MenuButton}"
                    Name="Button_Events"
                    Content="Events"
                    Width="200" Height="48"
                    Click="Button_Events_Click"        
                    Margin="0,26,0,0"
                    Background="#77aaaabb" BorderBrush="#777777"/>

                <Button Style="{StaticResource MenuButton}"
                    Name="Button_Schedule"
                    Content="Schedule"
                    Width="200" Height="48"
                    Click="Button_Schedule_Click"        
                    Margin="0,26,0,0"/>

                <!-- Аватар пользователя -->
                <Border x:Name="AvatarBorder" 
                        Style="{StaticResource BorderImageAvatar}" 
                        Width="100" Height="100" 
                        Margin="0,64,0,0" 
                        HorizontalAlignment="Center">
                    
                </Border>

                <Button Style="{StaticResource MenuButton}"
                    Name="Button_Profile"
                    Width="200" Height="48"
                    Click="Button_Profile_Click"        
                    Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" Margin="-16,0,0,0">
                        <Image Source="/Images/Icons/user_single_b.png"  
                        Width="36" Height="28"
                               Opacity="0.6"/>
                        <TextBlock Text="Profile"/>
                    </StackPanel>
                </Button>


                <Button Style="{StaticResource ActionButtonTransparent}"
                    HorizontalAlignment="Left"
                    Name="ButtonLogOut"
                    Click="ButtonLogOutClick"
                    Width="200" Height="42"
                    Margin="0,48,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/Icons/arrow_logout_b.png" 
                        Width="36" Height="28"/>
                        <TextBlock Text="Log Out" Foreground="#000000"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <Border.Effect>
                <DropShadowEffect Direction="270"  Opacity="0.4"/>
            </Border.Effect>
        </Border>

        <!-- M A I N   T A B   (CONTENT) -->
        <Border Style="{StaticResource BorderBase}" Grid.Column="1" Background="#c6c4ca"
                Margin="0,8,8,8">
            <ContentPresenter x:Name="PageData" 
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"/>

            <Border.Effect>
                <DropShadowEffect Direction="270"  Opacity="0.4"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>