<UserControl x:Class="YClimb.Controls.Common.Ctrl_TextFieldProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YClimb.Controls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <Label Content="{Binding Title}"
               FontSize="18" FontWeight="semibold" Margin="64,40,64,8"/>
        <StackPanel Orientation="Horizontal">
            <Button Style="{StaticResource ActionButtonTransparent}"
                    Width="64" Height="48"
                    Name="Button"
                    Click="ButtonClick"
                    Margin="2,0,16,0">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="Image" 
                           Source="{Binding ButtonIconSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Width="36" Height="28"/>
                </StackPanel>
            </Button>

            <TextBox 
                 Background="Transparent"
                 MaxLength="{Binding MaxLength, 
                RelativeSource={RelativeSource AncestorType=UserControl}}"
                 Text="{Binding Text, 
                RelativeSource={RelativeSource AncestorType=UserControl}, 
                UpdateSourceTrigger=PropertyChanged}"
                 Name="TextBox" TextWrapping="Wrap" 
                 VerticalAlignment="Center"
                 Width="520" Height="60"
                 Margin="0,0,0,0"
                 FontSize="32"
                 BorderBrush="Transparent"
                 Visibility="Hidden"/>

            <TextBlock 
                 Background="Transparent"
                 Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 Name="TextBlock" TextWrapping="Wrap" 
                 VerticalAlignment="Center"
                 Width="520" Height="60"
                 Margin="-520,0,0,0"
                 FontSize="32"/>
        </StackPanel>
    </StackPanel>
</UserControl>
