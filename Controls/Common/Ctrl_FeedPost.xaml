<UserControl x:Class="YClimb.Controls.Common.Ctrl_FeedPost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YClimb.Controls.Common"
             mc:Ignorable="d" 
             d:DesignWidth="1024">

    <Border Style="{StaticResource BorderBase}" Background="#eee7ee" 
            Width="860" Height="Auto" Margin="0,10,0,10">
        <StackPanel Background="Transparent">
            <!-- Заголовок поста -->
            <TextBlock Text="{Binding Title}"
                       FontSize="32" FontWeight="Bold"
                       FontFamily="Bahnschrift"
                       Margin="128,16,128,0"
                       TextWrapping="Wrap"/>

            <!-- Текст поста -->
            <TextBlock Text="{Binding Content}"
                       FontSize="24"
                       FontFamily="Bahnschrift"
                       Margin="64,32,64,0"
                       TextWrapping="Wrap"
                       TextAlignment="Justify"/>

            <!-- Галерея изображений -->
            <ItemsControl x:Name="ImagesItemsControl" 
                         ItemsSource="{Binding Images}"
                         Margin="64,32,64,32">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding ImageSource}" 
                                Stretch="Uniform"
                                MaxWidth="860"
                                Margin="0,24,0,24"
                                HorizontalAlignment="Center"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Заголовок и информация о пользователе -->
            <StackPanel Orientation="Horizontal" Margin="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding UserNickname}" 
              FontSize="20" FontWeight="SemiBold"
              FontFamily="Bahnschrift"
              Foreground="#555"/>
                <TextBlock Text=" • " 
              FontSize="20"
              FontFamily="Bahnschrift"
              Foreground="#555"/>
                <TextBlock Text="{Binding CreatedAt, StringFormat='dd.MM.yyyy HH:mm'}" 
              FontSize="16"
              FontFamily="Bahnschrift"
              Foreground="#777"/>

                <Button Content="Remove post" 
                    Command="{Binding DeleteCommand}"
                    Visibility="{Binding DeleteButtonVisibility}"
                    Style="{StaticResource ActionButtonRed}"
                    Width="120" Height="30"
                    HorizontalAlignment="Right"
                    Margin="256,0,16,16"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
