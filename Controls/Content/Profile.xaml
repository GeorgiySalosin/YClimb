<UserControl x:Class="YClimb.Controls.Content.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="720" Width="1024">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
        
             <!--P R O F I L E         I M A G E-->

            <Border x:Name="AvatarBorder"
                Style="{StaticResource BorderImageAvatar}" 
                Margin="32" HorizontalAlignment="Left">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/DefaultUser.jpg"
                    Stretch="UniformToFill"/>
                </Border.Background>
            </Border>

        

            <Button Style="{StaticResource ActionButton}"
                    HorizontalAlignment="Left"
                    Content="Set..."
                    Name="ButtonChangeAvatar"
                    Click="ChangePFP"
                    Width="200" Height="42"
                    Margin="64,0,0,0"/>

            <Button Style="{StaticResource ActionButtonBlack}"
                    HorizontalAlignment="Left"
                    Content="Delete..."
                    Name="ButtonRemoveAvatar"
                    Click="RemovePFP"
                    Width="200" Height="42"
                    Margin="64,16,0,0"/>

            
        </StackPanel>

        <StackPanel Margin="48">
            <UserControl x:Name="uc_nickname"
                Height="Auto" HorizontalAlignment="Center">
            </UserControl>
            
            <UserControl x:Name="uc_email"
                Height="Auto" HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>