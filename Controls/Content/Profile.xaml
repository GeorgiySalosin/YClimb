<UserControl x:Class="YClimb.Controls.Content.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="720" Width="1024">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
        
             <!--P R O F I L E         I M A G E-->

            <Border x:Name="AvatarBorder"
                Style="{StaticResource BorderImageAvatar}" 
                Margin="32" HorizontalAlignment="Left">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/DefaultUser.jpg"
                    Stretch="UniformToFill"/>
                </Border.Background>
            </Border>



            <Button Style="{StaticResource ActionButton}"
                    HorizontalAlignment="Left"
                    Name="ButtonChangeAvatar"
                    Click="ChangePFP"
                    Width="200" Height="42"
                    Margin="64,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Image Width="36" Height="36" Source="/Images/Icons/upload_image_b.png"
                     />
                    <TextBlock Text="Set..." FontSize="18" 
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ActionButtonBlack}"
                    HorizontalAlignment="Left"
                    Name="ButtonRemoveAvatar"
                    Click="RemovePFP"
                    Width="200" Height="42"
                    Margin="64,16,0,0"   >
                <StackPanel Orientation="Horizontal">
                    <Image Width="36" Height="36" Source="/Images/Icons/trashcan_w.png"/>
                    <TextBlock Text="Delete..." FontSize="18"
                               VerticalAlignment="Center"
                                Margin="4,0,0,0"/>
                </StackPanel>
            </Button>


    </StackPanel>

        <StackPanel Margin="48">
            <UserControl x:Name="uc_nickname"
                Height="Auto" HorizontalAlignment="Center">
            </UserControl>
            
            <UserControl x:Name="uc_email"
                Height="Auto" HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>