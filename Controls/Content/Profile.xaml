<UserControl x:Class="YClimb.Controls.Content.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YClimb.Controls.Content"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1024">
    <StackPanel>

        <!-- P R O F I L E         I M A G E-->

        <Border Style="{StaticResource BorderImageAvatar}" 
        Margin="32" HorizontalAlignment="Left">
            <Border.Background>
                <ImageBrush ImageSource="/Images/DefaultUser.jpg"/>
            </Border.Background>
        </Border>

        <Button Style="{StaticResource ActionButton}"
            HorizontalAlignment="Left"
            Content="Change avatar..."
            Click="ChangePFP"
            Width="200" Height="42"
            Margin="64,0,0,0"/>


    </StackPanel>
</UserControl>
