<UserControl x:Class="YClimb.Controls.Content.Feed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YClimb.Controls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1024">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource BorderBase}" Margin="0,0,0,8" Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel>
                
                <ContentControl x:Name="CreatePostContainer" 
                               Grid.Row="0"
                               HorizontalAlignment="Center"
                               Margin="0"/>

                <Button x:Name="ShowCreatePostButton"
                        Style="{StaticResource ActionButton}"
                        Grid.Row="0"
                        Content="+ New Post"
                        Click="ShowCreatePostButton_Click"
                        FontSize="18" FontFamily="Bahnschrift" FontWeight="Bold"
                        Width="200" Height="40"
                
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"
                        Visibility="Visible"/>
            </StackPanel>
        </Border>

        
        
        <ScrollViewer Grid.Row="1"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch">
            <StackPanel x:Name="PostsStackPanel" 
                        Orientation="Vertical"
                        HorizontalAlignment="Center"/>
        </ScrollViewer>
    </Grid>
</UserControl>