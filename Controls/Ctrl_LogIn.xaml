<UserControl x:Class="YClimb.Controls.Ctrl_LogIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YClimb.Controls"
             xmlns:uc="clr-namespace:YClimb.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border Style="{StaticResource BorderBase}" 
            Width="320" Height="440" Grid.Column="1">
        <StackPanel 
            Style="{StaticResource StackPanelBase}">
            <UserControl Margin="0,32,0,0" x:Name="uc_login"
                            Height="Auto" HorizontalAlignment="Center"/>

            <UserControl x:Name="uc_password"
                            Height="Auto" HorizontalAlignment="Center"/>


            <Button Style="{StaticResource ActionButtonBlack}" 
                        Click="ButtonSignInClick"
                        Content="Sign in"
                        Width="280" Height="42"
                        Margin="0,32,0,0"/>

            <Separator Height="8" Background="#DFDFBD"
                       Margin="0,32,0,32"/>
            
            
            <Button Style="{StaticResource ActionButton}" 
                        Click="ButtonSignUpClick"
                        Content="Sign up"
                        Width="148" Height="42"
                        VerticalAlignment="Bottom"/>
        </StackPanel>
    </Border>
</UserControl>
