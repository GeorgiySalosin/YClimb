<UserControl x:Class="YClimb.Controls.Ctrl_SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YClimb.Controls"
             xmlns:uc="clr-namespace:YClimb.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border Style="{StaticResource BorderBase}" 
            Width="320" Height="440" Grid.Column="1">
        <StackPanel 
            Style="{StaticResource StackPanelBase}">
            
            <UserControl Margin="0" x:Name="uc_nickname"
                            Height="Auto" HorizontalAlignment="Center"/>


            <UserControl x:Name="uc_email"
                            Height="Auto" HorizontalAlignment="Center"/>


            <Separator Height="8" Background="#DFDFBD"
                            Margin="0,4,0,4"/>


            <UserControl x:Name="uc_password"
                Height="Auto" HorizontalAlignment="Center"/>

            <UserControl x:Name="uc_password_confirm"
                Height="Auto" HorizontalAlignment="Center"/>


            <Separator Height="8" Background="#DFDFBD"
                Margin="0,4,0,4"/>


            <Button Style="{StaticResource ActionButtonTransparent}" 
                        Click="ButtonBackClick"
                        Width="60" Height="42"
                        Background="#30000000"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="0,4,16,0">
                    <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/Icons/arrow_back_w.png" 
                        Width="36" Height="28"/>
                    </StackPanel>
            </Button>

            <Button Style="{StaticResource ActionButtonBlack}" 
                        Click="ButtonConfirmSignUpClick"
                        Content="Sign up"
                        Width="148" Height="42"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Margin="16,-42,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
